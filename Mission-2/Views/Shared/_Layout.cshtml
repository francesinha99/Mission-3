<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewData["Title"]</title>

        <!--Web icon-->
        <link rel="icon" href="~/img/turtle.ico">

        <!--Linking bootstrap-->
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

        <!--Linking my own stylesheet-->
        <link href="~/css/default.css" rel="stylesheet" />
    </head>

    <body>

        <!--Navigation Bar-->
        <nav>
            <a asp-controller="Pages" asp-action="Index">Home</a>
            <a asp-controller="Pages" asp-action="Calculator">Calculator</a>
        </nav>

        <!--Inheritance-->
        <div>
            @RenderBody()
        </div>

        <!--Scripts-->
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery/jquery-3.6.0.min.js"></script>
        <script src="~/js/calculator.js"></script>

    </body>
</html>
