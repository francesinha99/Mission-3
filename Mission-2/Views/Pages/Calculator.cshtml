@{
    ViewData["Title"] = "Calculator";
}

@model CalculatorModel


<!--Calculator form-->
<h2>Calculator</h2>
<h4>Input grade as a whole number (i.e. 84)</h4>
<form method ="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="assignments" /> <br />
    <label>Group Projects:</label>
    <input id="group" asp-for="group" /> <br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="quizzes" /><br />
    <label>Exams:</label>
    <input id="exams" asp-for="exams" /><br />
    <label>Intex:</label>
    <input id="intex" asp-for="intex" /><br />
    <input id="btnCalc" type="submit" value="Calculate Grade" />

    <div asp-validation-summary="All"></div>
</form>